<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="PWA" parallel="tests" thread-count="1" >
    <test name="Chrome">
        <parameter name="platform" value="web"/>
        <parameter name="runOn" value="chrome"/>
        <classes>
            <class name="com.loyalty.pwa.appium.tests.AboutPageTest"/>
            <class name="com.loyalty.pwa.appium.tests.AnotherPageTest"/>
        </classes>
    </test>
    <test name="Safari">
        <parameter name="platform" value="web"/>
        <parameter name="runOn" value="safari"/>
        <classes>
            <class name="com.loyalty.pwa.appium.tests.AboutPageTest"/>
            <class name="com.loyalty.pwa.appium.tests.AnotherPageTest"/>
        </classes>
    </test>
</suite>